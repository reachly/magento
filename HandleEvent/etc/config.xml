<?xml version="1.0" encoding="UTF-8"?>
<config>
   <modules>
      <Reachly_HandleEvent>
         <version>0.0.1</version>
      </Reachly_HandleEvent>
   </modules>

   <global>
      <models>
         <reachly_handleevent>
            <class>Reachly_HandleEvent_Model</class>
         </reachly_handleevent>
      </models>

      <helpers>
         <reachly_handleevent>
            <class>Reachly_HandleEvent_Helper</class>
         </reachly_handleevent>
      </helpers>
   </global>

   <default>
      <settings>
         <endpoint_url>127.0.0.1:8042</endpoint_url>
      </settings>
   </default>

   <frontend>
      <layout>
         <updates>
            <reachly_handleevent>
               <file>Reachly/tracker.xml</file>
            </reachly_handleevent>
         </updates>
      </layout>

      <routers>
         <reachly>
            <use>standard</use>
            <args>
               <module>Reachly_HandleEvent</module>
               <frontName>reachly</frontName>
            </args>
         </reachly>
      </routers>

      <events>
         <!-- item added to cart -->
         <checkout_cart_add_product_complete>
            <observers>
               <reachly_handleevent>
                  <class>reachly_handleevent/observer</class>
                  <method>processCartEvent</method>
                  <type>singleton</type>
               </reachly_handleevent>
            </observers>
         </checkout_cart_add_product_complete>

         <!-- checkout event -->
         <controller_action_predispatch_checkout_onepage_index>
            <observers>
               <reachly_handleevent>
                  <class>reachly_handleevent/observer</class>
                  <method>processCheckoutEvent</method>
                  <type>singleton</type>
               </reachly_handleevent>
            </observers>
         </controller_action_predispatch_checkout_onepage_index>

         <!-- order event -->
         <checkout_submit_all_after>
            <observers>
               <reachly_handleevent>
                  <class>reachly_handleevent/observer</class>
                  <method>processOrderEvent</method>
                  <type>singleton</type>
               </reachly_handleevent>
            </observers>
         </checkout_submit_all_after>
      </events>
   </frontend>

   <adminhtml>
      <events>
         <!-- product saved -->
         <catalog_product_prepare_save>
            <observers>
               <reachly_handleevent>
                  <class>reachly_handleevent/observer</class>
                  <method>productSaveEvent</method>
                  <type>singleton</type>
               </reachly_handleevent>
            </observers>
         </catalog_product_prepare_save>

         <!-- product deleted -->
         <catalog_controller_product_delete>
            <observers>
               <reachly_handleevent>
                  <class>reachly_handleevent/observer</class>
                  <method>productDeleteEvent</method>
                  <type>singleton</type>
               </reachly_handleevent>
            </observers>
         </catalog_controller_product_delete>
      </events>

      <acl>
         <resources>
            <admin>
               <children>
                  <system>
                     <children>
                        <config>
                           <children>
                              <reachly_handleevent_options>
                                 <title>Reachly Configuration Section</title>
                              </reachly_handleevent_options>
                           </children>
                        </config>
                     </children>
                  </system>
               </children>
            </admin>
         </resources>
      </acl>
   </adminhtml>
</config>
